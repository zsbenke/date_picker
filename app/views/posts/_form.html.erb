<%= record_form_for post do |form| %>
  <div class="form_field compact inline">
    <div class="field_label right">
      <%= form.label :published_at %>
    </div>
    <div class="field_input">
      <%= svg_icon('icons.svg', 'calendar', class: 'field_icon') %>
      <%= form.date_time_picker_field :published_at %>
    </div>
  </div>

  <div class="form_field compact inline">
    <div class="field_label right">
      <%= form.label :title %>
    </div>
    <div class="field_input">
      <%= svg_icon('icons.svg', 'cube_box', class: 'field_icon') %>
      <%= form.text_field :title %>
    </div>
  </div>

  <div class="form_field compact inline multi_line">
    <div class="field_label right">
      <%= form.label :body %>
    </div>
    <div class="field_input">
      <%= svg_icon('icons.svg', 'doc_text', class: 'field_icon') %>
      <%= form.text_area :body, rows: 10 %>
    </div>
  </div>

  <%= form_actions inline: true do %>
    <%= form.submit @post.new_record? ? 'Create Post' : 'Update Post', class: 'button' %>
    <%= link_to 'Cancel', posts_path, class: 'cancel_button' %>
  <% end %>
<% end %>
